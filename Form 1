    Dim CDBCheck2() As String







    Private Sub Form1_Load(sender As Object, e As EventArgs) Handles MyBase.Load



        'Write the Current Date to ShowDate.txt
        Dim thisDate As Date
        thisDate = Today
        My.Computer.FileSystem.WriteAllText(".\txt\RecordDate.txt", thisDate, False, Encoding.ASCII)

        'Populate the Form Fields
        FileCheck()




    End Sub

    Private Sub ButtonSave_Click(sender As Object, e As EventArgs) Handles ButtonSave.Click
        'Saves All the Fields to txt files

        'Guest Info
        For i = 1 To 6

            My.Computer.FileSystem.WriteAllText(".\txt\Name" & i & ".txt", Me.Controls("Name" & i).Text, False, Encoding.ASCII)
            If Me.Controls("Name" & i).Text = "" Then
                My.Computer.FileSystem.WriteAllText(".\txt\Name" & i & ".txt", "   ", False, Encoding.ASCII)
            End If

            My.Computer.FileSystem.WriteAllText(".\txt\Title" & i & ".txt", Me.Controls("Title" & i).Text, False, Encoding.ASCII)
            If Me.Controls("Title" & i).Text = "" Then
                My.Computer.FileSystem.WriteAllText(".\txt\Title" & i & ".txt", "   ", False, Encoding.ASCII)
            End If

            My.Computer.FileSystem.WriteAllText(".\txt\Phone" & i & ".txt", Me.Controls("Phone" & i).Text, False, Encoding.ASCII)
            If Me.Controls("Phone" & i).Text = "" Then
                My.Computer.FileSystem.WriteAllText(".\txt\Phone" & i & ".txt", "   ", False, Encoding.ASCII)
            End If

            My.Computer.FileSystem.WriteAllText(".\txt\email" & i & ".txt", Me.Controls("email" & i).Text, False, Encoding.ASCII)
            If Me.Controls("email" & i).Text = "" Then
                My.Computer.FileSystem.WriteAllText(".\txt\email" & i & ".txt", "   ", False, Encoding.ASCII)
            End If

            My.Computer.FileSystem.WriteAllText(".\txt\Website" & i & ".txt", Me.Controls("Website" & i).Text, False, Encoding.ASCII)
            If Me.Controls("Website" & i).Text = "" Then
                My.Computer.FileSystem.WriteAllText(".\txt\Website" & i & ".txt", "   ", False, Encoding.ASCII)
            End If

            My.Computer.FileSystem.WriteAllText(".\txt\CityPhone" & i & ".txt", Me.Controls("CityPhone" & i).Text, False, Encoding.ASCII)
            If Me.Controls("CityPhone" & i).Text = "" Then
                My.Computer.FileSystem.WriteAllText(".\txt\CityPhone" & i & ".txt", "   ", False, Encoding.ASCII)
            End If

            My.Computer.FileSystem.WriteAllText(".\txt\CityWebsite" & i & ".txt", Me.Controls("CityWebsite" & i).Text, False, Encoding.ASCII)
            If Me.Controls("CityWebsite" & i).Text = "" Then
                My.Computer.FileSystem.WriteAllText(".\txt\CityWebsite" & i & ".txt", "   ", False, Encoding.ASCII)
            End If

        Next i

        'Crew
        My.Computer.FileSystem.WriteAllText(".\txt\Producer1.txt", Producer1.Text, False, Encoding.ASCII)
        If Producer1.Text = "" Then
            My.Computer.FileSystem.WriteAllText(".\txt\Producer1.txt", "   ", False, Encoding.ASCII)
        End If

        My.Computer.FileSystem.WriteAllText(".\txt\Host1.txt", Host1.Text, False, Encoding.ASCII)
        If Host1.Text = "" Then
            My.Computer.FileSystem.WriteAllText(".\txt\Host1.txt", "   ", False, Encoding.ASCII)
        End If



        For i = 1 To 2

            My.Computer.FileSystem.WriteAllText(".\txt\Director" & i & ".txt", Me.Controls("Director" & i).Text, False, Encoding.ASCII)
            If Me.Controls("Director" & i).Text = "" Then
                My.Computer.FileSystem.WriteAllText(".\txt\Director" & i & ".txt", "   ", False, Encoding.ASCII)
            End If

            My.Computer.FileSystem.WriteAllText(".\txt\Graphics" & i & ".txt", Me.Controls("Graphics" & i).Text, False, Encoding.ASCII)
            If Me.Controls("Graphics" & i).Text = "" Then
                My.Computer.FileSystem.WriteAllText(".\txt\Graphics" & i & ".txt", "   ", False, Encoding.ASCII)
            End If

            My.Computer.FileSystem.WriteAllText(".\txt\Audio" & i & ".txt", Me.Controls("Audio" & i).Text, False, Encoding.ASCII)
            If Me.Controls("Audio" & i).Text = "" Then
                My.Computer.FileSystem.WriteAllText(".\txt\Audio" & i & ".txt", "   ", False, Encoding.ASCII)
            End If

        Next i

        For i = 1 To 3

            My.Computer.FileSystem.WriteAllText(".\txt\Camera" & i & ".txt", Me.Controls("Camera" & i).Text, False, Encoding.ASCII)
            If Me.Controls("Camera" & i).Text = "" Then
                My.Computer.FileSystem.WriteAllText(".\txt\Camera" & i & ".txt", "   ", False, Encoding.ASCII)
            End If

        Next i


        'Show Info
        My.Computer.FileSystem.WriteAllText(".\txt\NWCPphone.txt", NWCPphone.Text, False, Encoding.ASCII)
        If NWCPphone.Text = "" Then
            My.Computer.FileSystem.WriteAllText(".\txt\NWCPphone.txt", "   ", False, Encoding.ASCII)
        End If

        My.Computer.FileSystem.WriteAllText(".\txt\CommentLine.txt", CommentLine.Text, False, Encoding.ASCII)
        If CommentLine.Text = "" Then
            My.Computer.FileSystem.WriteAllText(".\txt\CommentLine.txt", "   ", False, Encoding.ASCII)
        End If

        My.Computer.FileSystem.WriteAllText(".\txt\YouTube.txt", YouTube.Text, False, Encoding.ASCII)
        If YouTube.Text = "" Then
            My.Computer.FileSystem.WriteAllText(".\txt\YouTube.txt", "   ", False, Encoding.ASCII)
        End If

        My.Computer.FileSystem.WriteAllText(".\txt\Twitter.txt", Twitter.Text, False, Encoding.ASCII)
        If Twitter.Text = "" Then
            My.Computer.FileSystem.WriteAllText(".\txt\Twitter.txt", "   ", False, Encoding.ASCII)
        End If

        My.Computer.FileSystem.WriteAllText(".\txt\Facebook.txt", Facebook.Text, False, Encoding.ASCII)
        If Facebook.Text = "" Then
            My.Computer.FileSystem.WriteAllText(".\txt\Facebook.txt", "   ", False, Encoding.ASCII)
        End If

        My.Computer.FileSystem.WriteAllText(".\txt\ShowWebsite.txt", ShowWebsite.Text, False, Encoding.ASCII)
        If ShowWebsite.Text = "" Then
            My.Computer.FileSystem.WriteAllText(".\txt\ShowWebsite.txt", "   ", False, Encoding.ASCII)
        End If

        My.Computer.FileSystem.WriteAllText(".\txt\RecordDate.txt", RecordDate.Text, False, Encoding.ASCII)
        If RecordDate.Text = "" Then
            My.Computer.FileSystem.WriteAllText(".\txt\RecordDate.txt", "   ", False, Encoding.ASCII)
        End If

        My.Computer.FileSystem.WriteAllText(".\txt\ShowTitle.txt", ShowTitle.Text, False, Encoding.ASCII)
        If ShowTitle.Text = "" Then
            My.Computer.FileSystem.WriteAllText(".\txt\ShowTitle.txt", "   ", False, Encoding.ASCII)
        End If


        'Write txt Files for Use as Credit Titles
        'Singular or Plural
        If Trim(Director1.Text) <> "" And Trim(Director2.Text) <> "" Then
            My.Computer.FileSystem.WriteAllText(".\txt\DirectorHeader.txt", "Directors:", False, Encoding.ASCII)
        Else
            My.Computer.FileSystem.WriteAllText(".\txt\DirectorHeader.txt", "Director:", False, Encoding.ASCII)
        End If

        If Trim(Graphics1.Text) <> "" And Trim(Graphics2.Text) <> "" Then
            My.Computer.FileSystem.WriteAllText(".\txt\GraphicsHeader.txt", "Graphics Operators:", False, Encoding.ASCII)
        Else
            My.Computer.FileSystem.WriteAllText(".\txt\GraphicsHeader.txt", "Graphics Operator:", False, Encoding.ASCII)
        End If

        If Trim(Audio1.Text) <> "" And Trim(Audio2.Text) <> "" Then
            My.Computer.FileSystem.WriteAllText(".\txt\AudioHeader.txt", "Audio Operators:", False, Encoding.ASCII)
        Else
            My.Computer.FileSystem.WriteAllText(".\txt\AudioHeader.txt", "Audio Operator:", False, Encoding.ASCII)
        End If


        Dim CamVar As Integer
        CamVar = 0

        For i = 1 To 3
            If Trim(Me.Controls("Camera" & i).Text) <> "" Then
                CamVar = CamVar + 1
            End If
        Next i

        If CamVar > 1 Then
            My.Computer.FileSystem.WriteAllText(".\txt\CameraHeader.txt", "Camera Operators:", False, Encoding.ASCII)
        Else
            My.Computer.FileSystem.WriteAllText(".\txt\CameraHeader.txt", "Camera Operator:", False, Encoding.ASCII)
        End If



        Dim NameVar As Integer
        NameVar = 0

        For i = 1 To 6
            If Trim(Me.Controls("Name" & i).Text) <> "" Then
                NameVar = NameVar + 1
            End If
        Next i


        If NameVar > 1 Then
            My.Computer.FileSystem.WriteAllText(".\txt\NameHeader.txt", "Guests:", False, Encoding.ASCII)
        Else
            My.Computer.FileSystem.WriteAllText(".\txt\NameHeader.txt", "Guest:", False, Encoding.ASCII)
        End If



        'Open
        OpenSlate()

        'Credits
        Credits()

        'NWCP
        My.Computer.FileSystem.WriteAllText(".\CutFiles\03NWCP.tcf", My.Computer.FileSystem.ReadAllText(".\Templates\NWCP.tcf", Encoding.Default), False, Encoding.Default)


        'Host Name
        LowerThird(My.Computer.FileSystem.ReadAllText(".\txt\Host1.txt"), "Host of Northwest City Politics", "Blank", "04Host")

        'NWCP Phone
        LowerThird(My.Computer.FileSystem.ReadAllText(".\txt\NWCPphone.txt"), "Northwest City Politics Phone", "Blank", "05NWCPphone")

        'Comment Line
        LowerThird(My.Computer.FileSystem.ReadAllText(".\txt\CommentLine.txt"), "Comment Line", "Blank", "06CommentLine")

        'YouTube
        LowerThird(My.Computer.FileSystem.ReadAllText(".\txt\YouTube.txt"), "", "YouTube", "07YouTube")

        'Twitter
        LowerThird(My.Computer.FileSystem.ReadAllText(".\txt\Twitter.txt"), "", "Twitter", "08Twitter")



        'Guests
        Dim ZeroHolder As String = "0"
            For i = 1 To 6
                'Name
                LowerThird(My.Computer.FileSystem.ReadAllText(".\txt\Name" & i & ".txt"), My.Computer.FileSystem.ReadAllText(".\txt\Title" & i & ".txt"), "Blank", ZeroHolder & 06 + (i * 3) & "Guest" & i)
                ZeroHolder = ""

                'Contact
                LowerThird(My.Computer.FileSystem.ReadAllText(".\txt\Phone" & i & ".txt"), My.Computer.FileSystem.ReadAllText(".\txt\email" & i & ".txt"), "Blank", 07 + (i * 3) & "Contact" & i)

                'City
                LowerThird(My.Computer.FileSystem.ReadAllText(".\txt\CityPhone" & i & ".txt"), My.Computer.FileSystem.ReadAllText(".\txt\CityWebsite" & i & ".txt"), "Blank", 08 + (i * 3) & "City" & i)

            Next i



        'Message Box Popup to Say the Files are Saved

        MessageBox.Show("Files Saved to Graphics", "Northwest Community Politics",
           MessageBoxButtons.OK, MessageBoxIcon.Asterisk)
    End Sub


    Private Sub DBload_Click(sender As Object, e As EventArgs) Handles DBload.Click
        'Loads Guest Info If Radio Button is Checked Off of Dropdown

        If DBbox.SelectedIndex > -1 Then

            Dim FileCount As Integer

            Dim FILE_NAME As String = ".\Database\" & DBbox.SelectedItem & ".txt"

            Dim TextLine(9) As String

            If System.IO.File.Exists(FILE_NAME) = True Then

                Dim objReader As New System.IO.StreamReader(FILE_NAME)

                Do While objReader.Peek() <> -1

                    TextLine(FileCount) = objReader.ReadLine()

                    FileCount = FileCount + 1
                Loop




                For i = 1 To 6
                    If CType(Me.Controls.Item("DB" & i), RadioButton).Checked = True Then
                        Me.Controls("Name" & i).Text = TextLine(0)
                        Me.Controls("Title" & i).Text = TextLine(1)
                        Me.Controls("Phone" & i).Text = TextLine(2)
                        Me.Controls("email" & i).Text = TextLine(3)
                        Me.Controls("Website" & i).Text = TextLine(4)
                        Me.Controls("CityPhone" & i).Text = TextLine(5)
                        Me.Controls("CityWebsite" & i).Text = TextLine(6)
                    End If
                Next i


                objReader.Close()
            End If
        End If
    End Sub

    Private Sub Clear_Click(sender As Object, e As EventArgs) Handles Clear.Click
        'Clears Guest Info If Radio Button is Checked

        For i = 1 To 6
            If CType(Me.Controls.Item("DB" & i), RadioButton).Checked = True Then
                Me.Controls("Name" & i).Text = ""
                Me.Controls("Title" & i).Text = ""
                Me.Controls("Phone" & i).Text = ""
                Me.Controls("email" & i).Text = ""
                Me.Controls("Website" & i).Text = ""
                Me.Controls("CityPhone" & i).Text = ""
                Me.Controls("CityWebsite" & i).Text = ""
            End If
        Next i

    End Sub

    Private Sub SaveDB_Click(sender As Object, e As EventArgs) Handles SaveDB.Click
        'Saves Guest Info to Database and Reloads Dropdown


        Dim TextLine(9) As String


        For i = 1 To 6
            If CType(Me.Controls.Item("DB" & i), RadioButton).Checked = True Then
                TextLine(0) = Me.Controls("Name" & i).Text
                TextLine(1) = Me.Controls("Title" & i).Text
                TextLine(2) = Me.Controls("Phone" & i).Text
                TextLine(3) = Me.Controls("email" & i).Text
                TextLine(4) = Me.Controls("Website" & i).Text
                TextLine(5) = Me.Controls("CityPhone" & i).Text
                TextLine(6) = Me.Controls("CityWebsite" & i).Text
            End If
        Next i


        If TextLine(0) <> "" Then
            System.IO.File.WriteAllLines(".\Database\" & TextLine(0) & ".txt", TextLine)

            'Populate the Form Fields
            FileCheck()

            'Save MessageBox
            MessageBox.Show(TextLine(0) & " Saved to Database", "Northwest Community Politics",
   MessageBoxButtons.OK, MessageBoxIcon.Asterisk)
        End If

    End Sub

    Private Sub CDBload_Click(sender As Object, e As EventArgs) Handles CDBload.Click
        'Loads Crew Info If Radio Button is Checked Off of Dropdown

        If CDBbox.SelectedItem <> "" Then

            If CDB1.Checked Then
                Producer1.Text = CDBbox.SelectedItem
            End If
            If CDB2.Checked Then
                Host1.Text = CDBbox.SelectedItem
            End If
            If CDB3.Checked Then
                Director1.Text = CDBbox.SelectedItem
            End If
            If CDB4.Checked Then
                Director2.Text = CDBbox.SelectedItem
            End If
            If CDB5.Checked Then
                Graphics1.Text = CDBbox.SelectedItem
            End If
            If CDB6.Checked Then
                Graphics2.Text = CDBbox.SelectedItem
            End If

            If CDB7.Checked Then
                Audio1.Text = CDBbox.SelectedItem
            End If
            If CDB8.Checked Then
                Audio2.Text = CDBbox.SelectedItem
            End If
            If CDB9.Checked Then
                Camera1.Text = CDBbox.SelectedItem
            End If
            If CDB10.Checked Then
                Camera2.Text = CDBbox.SelectedItem
            End If
            If CDB11.Checked Then
                Camera3.Text = CDBbox.SelectedItem
            End If

        End If
    End Sub

    Private Sub SaveCDB_Click(sender As Object, e As EventArgs) Handles SaveCDB.Click
        'Saves Crew Info to Database and Reloads Dropdown

        Dim CDBvalue As String
        CDBvalue = ""

        If CDB1.Checked And Producer1.Text <> "" Then
            My.Computer.FileSystem.WriteAllText(".\CrewDatabase\" & Producer1.Text & ".txt", "", False)
            CDBvalue = Producer1.Text
        End If
        If CDB2.Checked And Host1.Text <> "" Then
            My.Computer.FileSystem.WriteAllText(".\CrewDatabase\" & Host1.Text & ".txt", "", False)
            CDBvalue = Host1.Text
        End If
        If CDB3.Checked And Director1.Text <> "" Then
            My.Computer.FileSystem.WriteAllText(".\CrewDatabase\" & Director1.Text & ".txt", "", False)
            CDBvalue = Director1.Text
        End If
        If CDB4.Checked And Director2.Text <> "" Then
            My.Computer.FileSystem.WriteAllText(".\CrewDatabase\" & Director2.Text & ".txt", "", False)
            CDBvalue = Director2.Text
        End If
        If CDB5.Checked And Graphics1.Text <> "" Then
            My.Computer.FileSystem.WriteAllText(".\CrewDatabase\" & Graphics1.Text & ".txt", "", False)
            CDBvalue = Graphics1.Text
        End If
        If CDB6.Checked And Graphics2.Text <> "" Then
            My.Computer.FileSystem.WriteAllText(".\CrewDatabase\" & Graphics2.Text & ".txt", "", False)
            CDBvalue = Graphics2.Text
        End If

        If CDB7.Checked And Audio1.Text <> "" Then
            My.Computer.FileSystem.WriteAllText(".\CrewDatabase\" & Audio1.Text & ".txt", "", False)
            CDBvalue = Audio1.Text
        End If
        If CDB8.Checked And Audio2.Text <> "" Then
            My.Computer.FileSystem.WriteAllText(".\CrewDatabase\" & Audio2.Text & ".txt", "", False)
            CDBvalue = Audio2.Text
        End If
        If CDB9.Checked And Camera1.Text <> "" Then
            My.Computer.FileSystem.WriteAllText(".\CrewDatabase\" & Camera1.Text & ".txt", "", False)
            CDBvalue = Camera1.Text
        End If
        If CDB10.Checked And Camera2.Text <> "" Then
            My.Computer.FileSystem.WriteAllText(".\CrewDatabase\" & Camera2.Text & ".txt", "", False)
            CDBvalue = Camera2.Text
        End If
        If CDB11.Checked And Camera3.Text <> "" Then
            My.Computer.FileSystem.WriteAllText(".\CrewDatabase\" & Camera3.Text & ".txt", "", False)
            CDBvalue = Camera3.Text
        End If


        If CDBvalue <> "" Then

            'Populate the Form Fields
            FileCheck()

            'Save MessageBox
            MessageBox.Show(CDBvalue & " Saved to Crew Database", "Northwest Community Politics", MessageBoxButtons.OK, MessageBoxIcon.Asterisk)
        End If

    End Sub

    Private Sub TextFileCheckTime_Tick(sender As Object, e As EventArgs) Handles TextFileCheckTime.Tick
        'Checks For Changes in txt Files Every 5 Secounds
        FileCheck()

    End Sub

    Sub FileCheck()
        'Compair txt Files to the Variable Values
        'Overwrires Form Field if txt File is Changed
        'No Check Against Form Value is Used


        'Guests
        For i = 1 To 6

            If System.IO.File.Exists(".\txt\Name" & i & ".txt") Then
                If NameCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Name" & i & ".txt") Then
                    NameCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Name" & i & ".txt")
                    Me.Controls("Name" & i).Text = Trim(NameCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\Title" & i & ".txt") Then
                If TitleCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Title" & i & ".txt") Then
                    TitleCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Title" & i & ".txt")
                    Me.Controls("Title" & i).Text = Trim(TitleCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\Phone" & i & ".txt") Then
                If PhoneCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Phone" & i & ".txt") Then
                    PhoneCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Phone" & i & ".txt")
                    Me.Controls("Phone" & i).Text = Trim(PhoneCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\email" & i & ".txt") Then
                If emailCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\email" & i & ".txt") Then
                    emailCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\email" & i & ".txt")
                    Me.Controls("email" & i).Text = Trim(emailCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\Website" & i & ".txt") Then
                If WebsiteCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Website" & i & ".txt") Then
                    WebsiteCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Website" & i & ".txt")
                    Me.Controls("Website" & i).Text = Trim(WebsiteCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\CityPhone" & i & ".txt") Then
                If CityPhoneCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\CityPhone" & i & ".txt") Then
                    CityPhoneCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\CityPhone" & i & ".txt")
                    Me.Controls("CityPhone" & i).Text = Trim(CityPhoneCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\CityWebsite" & i & ".txt") Then
                If CityWebsiteCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\CityWebsite" & i & ".txt") Then
                    CityWebsiteCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\CityWebsite" & i & ".txt")
                    Me.Controls("CityWebsite" & i).Text = Trim(CityWebsiteCheck(i))
                End If
            End If

        Next i


        'Crew
        For i = 1 To 1
            If System.IO.File.Exists(".\txt\Producer" & i & ".txt") Then
                If ProducerCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Producer" & i & ".txt") Then
                    ProducerCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Producer" & i & ".txt")
                    Me.Controls("Producer" & i).Text = Trim(ProducerCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\Host" & i & ".txt") Then
                If HostCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Host" & i & ".txt") Then
                    HostCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Host" & i & ".txt")
                    Me.Controls("Host" & i).Text = Trim(HostCheck(i))
                End If
            End If
        Next i


        For i = 1 To 2

            If System.IO.File.Exists(".\txt\Director" & i & ".txt") Then
                If DirectorCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Director" & i & ".txt") Then
                    DirectorCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Director" & i & ".txt")
                    Me.Controls("Director" & i).Text = Trim(DirectorCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\Graphics" & i & ".txt") Then
                If GraphicsCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Graphics" & i & ".txt") Then
                    GraphicsCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Graphics" & i & ".txt")
                    Me.Controls("Graphics" & i).Text = Trim(GraphicsCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\Audio" & i & ".txt") Then
                If AudioCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Audio" & i & ".txt") Then
                    AudioCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Audio" & i & ".txt")
                    Me.Controls("Audio" & i).Text = Trim(AudioCheck(i))
                End If
            End If

        Next i



        For i = 1 To 3

            If System.IO.File.Exists(".\txt\Camera" & i & ".txt") Then
                If CameraCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Camera" & i & ".txt") Then
                    CameraCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Camera" & i & ".txt")
                    Me.Controls("Camera" & i).Text = Trim(CameraCheck(i))
                End If
            End If

        Next i

        'Show Info
        For i = 1 To 1

            If System.IO.File.Exists(".\txt\NWCPphone.txt") Then
                If NWCPphoneCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\NWCPphone.txt") Then
                    NWCPphoneCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\NWCPphone.txt")
                    NWCPphone.Text = Trim(NWCPphoneCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\CommentLine.txt") Then
                If CommentLineCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\CommentLine.txt") Then
                    CommentLineCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\CommentLine.txt")
                    CommentLine.Text = Trim(CommentLineCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\YouTube.txt") Then
                If YouTubeCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\YouTube.txt") Then
                    YouTubeCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\YouTube.txt")
                    YouTube.Text = Trim(YouTubeCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\Twitter.txt") Then
                If TwitterCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Twitter.txt") Then
                    TwitterCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Twitter.txt")
                    Twitter.Text = Trim(TwitterCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\Facebook.txt") Then
                If FacebookCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Facebook.txt") Then
                    FacebookCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Facebook.txt")
                    Facebook.Text = Trim(FacebookCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\ShowWebsite.txt") Then
                If ShowWebsiteCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\ShowWebsite.txt") Then
                    ShowWebsiteCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\ShowWebsite.txt")
                    ShowWebsite.Text = Trim(ShowWebsiteCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\RecordDate.txt") Then
                If RecordDateCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\RecordDate.txt") Then
                    RecordDateCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\RecordDate.txt")
                    RecordDate.Text = Trim(RecordDateCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\ShowTitle.txt") Then
                If ShowTitleCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\ShowTitle.txt") Then
                    ShowTitleCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\ShowTitle.txt")
                    ShowTitle.Text = Trim(ShowTitleCheck(i))
                End If
            End If

        Next i


        'Populate Guest Database Dropdown
        Dim dir = ".\Database\"
        If System.IO.Directory.GetFiles(dir).Length <> DBCheck Then
            DBbox.Items.Clear()
            For Each DBfilelist As String In System.IO.Directory.GetFiles(dir)
                DBbox.Items.Add(System.IO.Path.GetFileNameWithoutExtension(DBfilelist))
            Next
            DBCheck = System.IO.Directory.GetFiles(dir).Length
        End If



        'Populate Crew Database Dropdown
        Dim cdir = ".\CrewDatabase\"
        If System.IO.Directory.GetFiles(cdir).Length <> CDBCheck Then
            CDBbox.Items.Clear()
            For Each CDBfilelist As String In System.IO.Directory.GetFiles(cdir)
                CDBbox.Items.Add(System.IO.Path.GetFileNameWithoutExtension(CDBfilelist))
            Next
            CDBCheck = System.IO.Directory.GetFiles(cdir).Length
        End If

    End Sub


    Public Function AddSpace(ByVal InputString As String) As String

        Dim CharArray() As Char = InputString.ToCharArray
        Dim SpaceString As String = ""

        Dim i As Integer = 0
        For Each element As Char In CharArray
            SpaceString = SpaceString + CharArray(i) + "     "
            i = i + 1
        Next

        SpaceString = Trim(SpaceString)
        Return SpaceString
    End Function


    Public Function AddOneSpace(ByVal InputString As String) As String

        Dim CharArray() As Char = InputString.ToCharArray
        Dim SpaceString As String = ""

        Dim i As Integer = 0
        For Each element As Char In CharArray
            SpaceString = SpaceString + CharArray(i) + " "
            i = i + 1
        Next

        SpaceString = Trim(SpaceString)
        Return SpaceString
    End Function


    Sub LowerThird(ByVal TopLine As String, ByVal BottomLine As String, ByVal Pic As String, ByVal FileName As String)


        Dim Template As String = My.Computer.FileSystem.ReadAllText(".\Templates\Lower.txt", Encoding.GetEncoding(1252))

        Dim Output As String
        Output = Template

        TopLine = AddSpace(TopLine)
        BottomLine = AddSpace(BottomLine)
        Pic = AddOneSpace(Pic)

        Output = Output.Replace("N     a     m     e", TopLine)
        Output = Output.Replace("T     i     t     l     e", BottomLine)
        Output = Output.Replace("Y o u T u b e", Pic)


        My.Computer.FileSystem.WriteAllText(".\CutFiles\" & FileName & ".tcf", Output, False, Encoding.Default)

    End Sub


    Sub OpenSlate()

        Dim Template As String = My.Computer.FileSystem.ReadAllText(".\Templates\Open.txt", Encoding.GetEncoding(1252))

        Dim Output As String
        Output = Template

        'Show Title
        Output = Output.Replace("S     h     o     w           T     i     t     l     e", AddSpace(My.Computer.FileSystem.ReadAllText(".\txt\ShowTitle.txt")))

        'Guests
        Output = Output.Replace("G     u     e     s     t     s     :", AddSpace(My.Computer.FileSystem.ReadAllText(".\txt\NameHeader.txt")))
        For i = 1 To 6
            Output = Output.Replace("G     u     e     s     t     " & i, AddSpace(My.Computer.FileSystem.ReadAllText(".\txt\Name" & i & ".txt")))
        Next i

        My.Computer.FileSystem.WriteAllText(".\CutFiles\01Open.tcf", Output, False, Encoding.Default)
    End Sub


    Sub Credits()
        Dim Template As String = My.Computer.FileSystem.ReadAllText(".\Templates\Credits.txt", Encoding.GetEncoding(1252))

        Dim Output As String
        Output = Template


        'Guests
        Output = Output.Replace("G     u     e     s     t     s     :", AddSpace(My.Computer.FileSystem.ReadAllText(".\txt\NameHeader.txt")))
        For i = 1 To 6
            Output = Output.Replace("G     u     e     s     t     " & i, AddSpace(My.Computer.FileSystem.ReadAllText(".\txt\Name" & i & ".txt")))
        Next i

        'Producer
        Output = Output.Replace("P     r     o     d     u     c     e     r", AddSpace(My.Computer.FileSystem.ReadAllText(".\txt\Producer1.txt")))

        'Host
        Output = Output.Replace("H     o     s     t", AddSpace(My.Computer.FileSystem.ReadAllText(".\txt\Host1.txt")))

        'Directors
        Output = Output.Replace("D     i     r     e     c     t     o     r     s     :", AddSpace(My.Computer.FileSystem.ReadAllText(".\txt\DirectorHeader.txt")))
        For i = 1 To 2
            Output = Output.Replace("D     i     r     e     c     t     o     r     " & i, AddSpace(My.Computer.FileSystem.ReadAllText(".\txt\Director" & i & ".txt")))
        Next i

        'Graphics
        Output = Output.Replace("G     r     a     p     h     i     c     s           O     p     e     r     a     t     o     r     s     :", AddSpace(My.Computer.FileSystem.ReadAllText(".\txt\GraphicsHeader.txt")))
        For i = 1 To 2
            Output = Output.Replace("G     r     a     p     h     i     c     " & i, AddSpace(My.Computer.FileSystem.ReadAllText(".\txt\Graphics" & i & ".txt")))
        Next i

        'Audio
        Output = Output.Replace("A     u     d     i     o           O     p     e     r     a     t     o     r     s     :", AddSpace(My.Computer.FileSystem.ReadAllText(".\txt\AudioHeader.txt")))
        For i = 1 To 2
            Output = Output.Replace("A     u     d     i     o     " & i, AddSpace(My.Computer.FileSystem.ReadAllText(".\txt\Audio" & i & ".txt")))
        Next i

        'Camera
        Output = Output.Replace("C     a     m     e     r     a           O     p     e     r     a     t     o     r     s     :", AddSpace(My.Computer.FileSystem.ReadAllText(".\txt\CameraHeader.txt")))
        For i = 1 To 3
            Output = Output.Replace("C     a     m     e     r     a     " & i, AddSpace(My.Computer.FileSystem.ReadAllText(".\txt\Camera" & i & ".txt")))
        Next i

        'Record Date
        Output = Output.Replace("6     /     2     /     2     0     1     6", AddSpace(My.Computer.FileSystem.ReadAllText(".\txt\RecordDate.txt")))

        My.Computer.FileSystem.WriteAllText(".\CutFiles\02Credits.tcf", Output, False, Encoding.Default)

    End Sub

End Class
