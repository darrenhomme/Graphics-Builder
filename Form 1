            FileCheck()

            'Save MessageBox
            MessageBox.Show(CDBvalue & " Saved to Crew Database", "Northwest Community Politics", MessageBoxButtons.OK, MessageBoxIcon.Asterisk)
        End If

    End Sub

    Private Sub TextFileCheckTime_Tick(sender As Object, e As EventArgs) Handles TextFileCheckTime.Tick
        'Checks For Changes in txt Files Every 5 Secounds
        FileCheck()

    End Sub

    Public Sub FileCheck()
        'Compair txt Files to the Variable Values
        'Overwrires Form Field if txt File is Changed
        'No Check Against Form Value is Used


        'Guests
        For i = 1 To 6

            If System.IO.File.Exists(".\txt\Name" & i & ".txt") Then
                If NameCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Name" & i & ".txt") Then
                    NameCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Name" & i & ".txt")
                    Me.Controls("Name" & i).Text = Trim(NameCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\Title" & i & ".txt") Then
                If TitleCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Title" & i & ".txt") Then
                    TitleCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Title" & i & ".txt")
                    Me.Controls("Title" & i).Text = Trim(TitleCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\Phone" & i & ".txt") Then
                If PhoneCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Phone" & i & ".txt") Then
                    PhoneCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Phone" & i & ".txt")
                    Me.Controls("Phone" & i).Text = Trim(PhoneCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\email" & i & ".txt") Then
                If emailCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\email" & i & ".txt") Then
                    emailCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\email" & i & ".txt")
                    Me.Controls("email" & i).Text = Trim(emailCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\Website" & i & ".txt") Then
                If WebsiteCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Website" & i & ".txt") Then
                    WebsiteCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Website" & i & ".txt")
                    Me.Controls("Website" & i).Text = Trim(WebsiteCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\CityPhone" & i & ".txt") Then
                If CityPhoneCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\CityPhone" & i & ".txt") Then
                    CityPhoneCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\CityPhone" & i & ".txt")
                    Me.Controls("CityPhone" & i).Text = Trim(CityPhoneCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\CityWebsite" & i & ".txt") Then
                If CityWebsiteCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\CityWebsite" & i & ".txt") Then
                    CityWebsiteCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\CityWebsite" & i & ".txt")
                    Me.Controls("CityWebsite" & i).Text = Trim(CityWebsiteCheck(i))
                End If
            End If

        Next i


        'Crew
        For i = 1 To 2
            If System.IO.File.Exists(".\txt\Producer" & i & ".txt") Then
                If ProducerCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Producer" & i & ".txt") Then
                    ProducerCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Producer" & i & ".txt")
                    Me.Controls("Producer" & i).Text = Trim(ProducerCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\Host" & i & ".txt") Then
                If HostCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Host" & i & ".txt") Then
                    HostCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Host" & i & ".txt")
                    Me.Controls("Host" & i).Text = Trim(HostCheck(i))
                End If
            End If


            If System.IO.File.Exists(".\txt\Director" & i & ".txt") Then
                If DirectorCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Director" & i & ".txt") Then
                    DirectorCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Director" & i & ".txt")
                    Me.Controls("Director" & i).Text = Trim(DirectorCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\Graphics" & i & ".txt") Then
                If GraphicsCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Graphics" & i & ".txt") Then
                    GraphicsCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Graphics" & i & ".txt")
                    Me.Controls("Graphics" & i).Text = Trim(GraphicsCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\Audio" & i & ".txt") Then
                If AudioCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Audio" & i & ".txt") Then
                    AudioCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Audio" & i & ".txt")
                    Me.Controls("Audio" & i).Text = Trim(AudioCheck(i))
                End If
            End If

        Next i



        For i = 1 To 3

            If System.IO.File.Exists(".\txt\Camera" & i & ".txt") Then
                If CameraCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Camera" & i & ".txt") Then
                    CameraCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Camera" & i & ".txt")
                    Me.Controls("Camera" & i).Text = Trim(CameraCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\Floor" & i & ".txt") Then
                If FloorCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Floor" & i & ".txt") Then
                    FloorCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Floor" & i & ".txt")
                    Me.Controls("Floor" & i).Text = Trim(FloorCheck(i))
                End If
            End If

        Next i

        'Show Info
        For i = 1 To 1

            If System.IO.File.Exists(".\txt\ShowPhone.txt") Then
                If ShowPhoneCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\ShowPhone.txt") Then
                    ShowPhoneCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\ShowPhone.txt")
                    ShowPhone.Text = Trim(ShowPhoneCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\CommentLine.txt") Then
                If CommentLineCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\CommentLine.txt") Then
                    CommentLineCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\CommentLine.txt")
                    CommentLine.Text = Trim(CommentLineCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\ShowYouTube.txt") Then
                If ShowYouTubeCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\ShowYouTube.txt") Then
                    ShowYouTubeCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\ShowYouTube.txt")
                    ShowYouTube.Text = Trim(ShowYouTubeCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\ShowTwitter.txt") Then
                If ShowTwitterCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\ShowTwitter.txt") Then
                    ShowTwitterCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\ShowTwitter.txt")
                    ShowTwitter.Text = Trim(ShowTwitterCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\ShowFacebook.txt") Then
                If ShowFacebookCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\ShowFacebook.txt") Then
                    ShowFacebookCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\ShowFacebook.txt")
                    ShowFacebook.Text = Trim(ShowFacebookCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\ShowWebsite.txt") Then
                If ShowWebsiteCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\ShowWebsite.txt") Then
                    ShowWebsiteCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\ShowWebsite.txt")
                    ShowWebsite.Text = Trim(ShowWebsiteCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\Showemail.txt") Then
                If ShowemailCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\Showemail.txt") Then
                    ShowemailCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\Showemail.txt")
                    Showemail.Text = Trim(ShowemailCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\RecordDate.txt") Then
                If RecordDateCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\RecordDate.txt") Then
                    RecordDateCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\RecordDate.txt")
                    RecordDate.Text = Trim(RecordDateCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\ShowName.txt") Then
                If ShowNameCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\ShowName.txt") Then
                    ShowNameCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\ShowName.txt")
                    ShowName.Text = Trim(ShowNameCheck(i))
                End If
            End If

            If System.IO.File.Exists(".\txt\ShowTitle.txt") Then
                If ShowTitleCheck(i) <> My.Computer.FileSystem.ReadAllText(".\txt\ShowTitle.txt") Then
                    ShowTitleCheck(i) = My.Computer.FileSystem.ReadAllText(".\txt\ShowTitle.txt")
                    ShowTitle.Text = Trim(ShowTitleCheck(i))
                End If
            End If

        Next i


        'Populate Guest Database Dropdown
        Dim dir = ".\Database\"
        If System.IO.Directory.GetFiles(dir).Length <> DBCheck Then
            DBbox.Items.Clear()
            For Each DBfilelist As String In System.IO.Directory.GetFiles(dir)
                DBbox.Items.Add(System.IO.Path.GetFileNameWithoutExtension(DBfilelist))
            Next
            DBCheck = System.IO.Directory.GetFiles(dir).Length
        End If



        'Populate Crew Database Dropdown
        Dim cdir = ".\CrewDatabase\"
        If System.IO.Directory.GetFiles(cdir).Length <> CDBCheck Then
            CDBbox.Items.Clear()
            For Each CDBfilelist As String In System.IO.Directory.GetFiles(cdir)
                CDBbox.Items.Add(System.IO.Path.GetFileNameWithoutExtension(CDBfilelist))
            Next
            CDBCheck = System.IO.Directory.GetFiles(cdir).Length
        End If

    End Sub


    Public Function AddSpace(ByVal InputString As String) As String

        Dim CharArray() As Char = InputString.ToCharArray
        Dim SpaceString As String = ""

        Dim i As Integer = 0
        For Each element As Char In CharArray
            SpaceString = SpaceString + CharArray(i) & ChrW(0) & ChrW(0) & ChrW(0) & ChrW(0) & ChrW(0)
            i = i + 1
        Next


        Return SpaceString
    End Function


    Public Function AddOneSpace(ByVal InputString As String) As String

        Dim CharArray() As Char = InputString.ToCharArray
        Dim SpaceString As String = ""

        Dim i As Integer = 0
        For Each element As Char In CharArray
            SpaceString = SpaceString + CharArray(i) & ChrW(0)
            i = i + 1
        Next


        Return SpaceString
    End Function


    Public Sub LowerThird(ByVal TopLine As String, ByVal BottomLine As String, ByVal Pic As String, ByVal FileName As String)

        If System.IO.File.Exists(".\Templates\Lower.tcf") Then
            Dim Template As String = My.Computer.FileSystem.ReadAllText(".\Templates\Lower.tcf", Encoding.GetEncoding("IBM861"))

            Dim Output As String
            Output = Template

            Dim Path As String = "C:\Users\MyComputer\Desktop\Images\"
            Dim CharCountOld As Integer
            Dim CharCountNew As Integer


            'Page Name
            CharCountNew = FileName.Length
            Output = Output.Replace(ChrW(5) & ChrW(0) & ChrW(0) & ChrW(0) & AddOneSpace("Lower"), ChrW(CharCountNew) & ChrW(0) & ChrW(0) & ChrW(0) & AddOneSpace(FileName))

            'Top Line
            CharCountNew = TopLine.Length
            Output = Output.Replace(ChrW(4) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace("Name"), ChrW(CharCountNew) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace(TopLine))

            'Botton Line
            If BottomLine = "" Then
                BottomLine = "   "
            End If
            CharCountNew = BottomLine.Length
            Output = Output.Replace(ChrW(5) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace("Title"), ChrW(CharCountNew) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace(BottomLine))

            'Pic
            CharCountOld = Path.Length + 11
            CharCountNew = Path.Length + Pic.Length
            Output = Output.Replace(ChrW(CharCountOld) & ChrW(0) & ChrW(0) & ChrW(0) & AddOneSpace(Path) & AddOneSpace("Picture.tga"), ChrW(CharCountNew) & ChrW(0) & ChrW(0) & ChrW(0) & AddOneSpace(Path) & AddOneSpace(Pic))


            My.Computer.FileSystem.WriteAllText(".\CutFiles\" & FileName & ".tcf", Output, False, Encoding.GetEncoding("IBM861"))
        End If
    End Sub


    Public Sub OpenSlate()

        If System.IO.File.Exists(".\Templates\Open.tcf") Then

            Dim Template As String = My.Computer.FileSystem.ReadAllText(".\Templates\Open.tcf", Encoding.GetEncoding("IBM861"))

            Dim Output As String
            Output = Template

            Dim CharCountNew As Integer

            'Page Name
            Dim FileName As String = "01Open"
            CharCountNew = FileName.Length
            Output = Output.Replace(ChrW(4) & ChrW(0) & ChrW(0) & ChrW(0) & AddOneSpace("Open"), ChrW(CharCountNew) & ChrW(0) & ChrW(0) & ChrW(0) & AddOneSpace(FileName))

            'Show Title
            Dim ShowTitleString As String = ShowTitleCheck(1)
            CharCountNew = ShowTitleString.Length
            Output = Output.Replace(ChrW(10) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace("Show Title"), ChrW(CharCountNew) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace(ShowTitleString))

            'Guest Header
            Dim GuestHeaderString As String = GuestHeaderCheck
            CharCountNew = GuestHeaderString.Length
            Output = Output.Replace(ChrW(12) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace("Guest Header"), ChrW(CharCountNew) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace(GuestHeaderString))

            'Guests
            Dim NameString As String
            Dim TitleString As String
            For i = 1 To 6
                'Name
                NameString = NameCheck(i)
                CharCountNew = NameString.Length
                Output = Output.Replace(ChrW(7) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace("Guest " & i), ChrW(CharCountNew) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace(NameString))

                NameString = NameCheck(i)
                CharCountNew = NameString.Length
                Output = Output.Replace(ChrW(6) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace("Name " & i), ChrW(CharCountNew) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace(NameString))

                'Title
                TitleString = TitleCheck(i)
                CharCountNew = TitleString.Length
                Output = Output.Replace(ChrW(7) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace("Title " & i), ChrW(CharCountNew) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace(TitleString))
            Next i


            'Record Date
            Dim RecordDateString As String = RecordDateCheck(1)
            CharCountNew = RecordDateString.Length
            Output = Output.Replace(ChrW(11) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace("Record Date"), ChrW(CharCountNew) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace(RecordDateString))

            'Producer Header
            Dim ProducerHeaderString As String = ProducerHeaderCheck
            CharCountNew = ProducerHeaderString.Length
            Output = Output.Replace(ChrW(15) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace("Producer Header"), ChrW(CharCountNew) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace(ProducerHeaderString))

            For i = 1 To 2
                'Producers
                Dim ProducerString As String = ProducerCheck(i)
                CharCountNew = ProducerString.Length
                Output = Output.Replace(ChrW(10) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace("Producer " & i), ChrW(CharCountNew) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace(ProducerString))
            Next i

            'Host Header
            Dim HostHeaderString As String = HostHeaderCheck
            CharCountNew = HostHeaderString.Length
            Output = Output.Replace(ChrW(11) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace("Host Header"), ChrW(CharCountNew) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace(HostHeaderString))

            For i = 1 To 2
                'Hosts
                Dim HostString As String = HostCheck(i)
                CharCountNew = HostString.Length
                Output = Output.Replace(ChrW(6) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace("Host " & i), ChrW(CharCountNew) & ChrW(0) & ChrW(0) & ChrW(0) & AddSpace(HostString))
            Next i

            My.Computer.FileSystem.WriteAllText(".\CutFiles\01Open.tcf", Output, False, Encoding.GetEncoding("IBM861"))

        End If
    End Sub


