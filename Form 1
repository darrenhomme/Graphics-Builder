    Private Sub ButtonSave_Click(sender As Object, e As EventArgs) Handles ButtonSave.Click

            My.Computer.FileSystem.WriteAllText(".\txt\Name1.txt", Name1.Text, False, Encoding.Default)
            My.Computer.FileSystem.WriteAllText(".\txt\Title1.txt", Title1.Text, False, Encoding.Default)
